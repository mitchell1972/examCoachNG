modules = ["flutter"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["unzip"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Flutter App"

[[workflows.workflow]]
name = "Flutter App"
author = "agent"

[workflows.workflow.metadata]
outputType = "webview"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "export PATH=\"$PWD/flutter/bin:$PATH\" && flutter pub get && flutter run -d web-server --web-port=5000 --web-hostname=0.0.0.0"
waitForPort = 5000

[[ports]]
localPort = 5000
externalPort = 80
