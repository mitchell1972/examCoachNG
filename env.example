# ExamCoach Backend Environment Configuration
# Copy this file to server/.env and update with your actual values

# Application
NODE_ENV=development
PORT=3000

# Database
DATABASE_URL=postgresql://examcoach:examcoach123@localhost:5432/examcoach_db

# Admin Dashboard Authentication
ADMIN_USER=admin
ADMIN_PASS=change_this_password_in_production

# CORS Configuration
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:5000,http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes in milliseconds
RATE_LIMIT_MAX_REQUESTS=100   # Max requests per window

# JWT Configuration (for future API authentication)
JWT_SECRET=your_super_secret_jwt_key_change_in_production
JWT_EXPIRES_IN=7d

# Google Play Store Configuration
GOOGLE_SERVICE_ACCOUNT_KEY_PATH=/path/to/google-service-account-key.json
ANDROID_PACKAGE_NAME=com.examcoachng.app

# Apple App Store Configuration
APPLE_SHARED_SECRET=your_apple_shared_secret_here

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_specific_password

# Monitoring (optional)
SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id

# Redis Configuration (optional, for caching)
REDIS_URL=redis://localhost:6379

# File Storage (for future use)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=examcoach-uploads

# Payment Webhook Secrets
GOOGLE_WEBHOOK_SECRET=your_google_webhook_secret
APPLE_WEBHOOK_SECRET=your_apple_webhook_secret

# Analytics (optional)
GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X
MIXPANEL_TOKEN=your_mixpanel_token

# Feature Flags
ENABLE_SUBSCRIPTIONS=true
ENABLE_MOCK_EXAMS=true
ENABLE_OFFLINE_MODE=false
MAINTENANCE_MODE=false

# Logging
LOG_LEVEL=info  # debug, info, warn, error
LOG_FILE_PATH=./logs/app.log

# Security
BCRYPT_ROUNDS=10
SESSION_SECRET=your_session_secret_change_in_production
COOKIE_SECURE=false  # Set to true in production with HTTPS

# API Keys (for future integrations)
OPENAI_API_KEY=your_openai_api_key  # For AI-generated questions
GEMINI_API_KEY=your_gemini_api_key  # Alternative AI provider

# Development
DEBUG=false  # Set to true for verbose logging in development
