# ExamCoach Production Environment Configuration
# IMPORTANT: Update all values before deploying to production

# Application
NODE_ENV=production
PORT=3000

# Database (Update with your production database URL)
DATABASE_URL=postgresql://examcoach_prod:STRONG_PASSWORD_HERE@your-db-host.com:5432/examcoach_production

# Admin Dashboard Authentication (Change these!)
ADMIN_USER=admin_prod_2024
ADMIN_PASS=ExamCoach#Secure2024!

# CORS Configuration (Update with your production domains)
CORS_ORIGINS=https://examcoachng.com,https://www.examcoachng.com,https://api.examcoachng.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# JWT Configuration (Generate a strong secret!)
JWT_SECRET=your_super_secret_jwt_key_change_in_production_$(openssl rand -hex 32)
JWT_EXPIRES_IN=7d

# Google Play Store Configuration
GOOGLE_SERVICE_ACCOUNT_KEY_PATH=/app/secrets/google-service-account-key.json
ANDROID_PACKAGE_NAME=com.examcoachng.app

# Apple App Store Configuration (if needed)
APPLE_SHARED_SECRET=your_apple_shared_secret_here

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@examcoachng.com
SMTP_PASS=your_app_specific_password

# Monitoring (Recommended for production)
SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id

# Redis Configuration (if using caching)
REDIS_URL=redis://your-redis-host:6379

# File Storage (if using AWS S3)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=examcoach-uploads

# Payment Webhook Secrets
GOOGLE_WEBHOOK_SECRET=your_google_webhook_secret
APPLE_WEBHOOK_SECRET=your_apple_webhook_secret

# Analytics
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
MIXPANEL_TOKEN=your_mixpanel_token

# Feature Flags
ENABLE_SUBSCRIPTIONS=true
ENABLE_MOCK_EXAMS=true
ENABLE_OFFLINE_MODE=false
MAINTENANCE_MODE=false

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=/var/log/examcoach/app.log

# Security
BCRYPT_ROUNDS=12  # Higher for production
SESSION_SECRET=your_session_secret_$(openssl rand -hex 32)
COOKIE_SECURE=true  # Must be true in production with HTTPS

# API Keys (for future integrations)
OPENAI_API_KEY=sk-...
GEMINI_API_KEY=AIza...

# Development
DEBUG=false
